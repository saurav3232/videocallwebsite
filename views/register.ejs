<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="css/bootstrap.min.css">
</head>

<body>
  <div class="container mt-5">
    <h1>Register</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /register route -->
            <%- include("partials/messages") %>
              <form action="/register" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control"
                    placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <button type="submit" class="btn btn-dark" style="margin-top:20px ;">Register</button>
              </form>
              <a class="btn btn-block bg-danger " style="margin-top: 10px;"  href="/auth/google" role="button">
                Sign up with google
              </a>
              <p>Already have an account <a href="/login">Login</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
</body>

</html>